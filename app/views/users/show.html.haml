-provide( :title, @user.user_name)
.row
  %h6= @user.user_name
  .show-user
    %ul
      %li=gravatar_for @user
      %h3= @user.user_name
    %aside
    .span8.pull-right  
      -if @user.microposts.any?
        %h3
          Microposts
        ( 
        =@user.microposts.count
        )
        %ol.microposts
          =render @microposts
        =will_paginate @microposts
